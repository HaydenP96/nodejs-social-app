<form
  class="p-4 p-md-5 border rounded-3 bg-white shadow"
  action="/login"
  method="post">
  <div class="form-floating mb-3">
    <input
      required
      type="email"
      class="form-control <%= message.user ? 'is-invalid' : '' %>"
      id="username"
      name="username"
      placeholder="name@example.com" />
    <label for="username">Email address</label>
    <div class="invalid-feedback">*Incorrect email address.</div>
  </div>
  <div class="form-floating mb-3">
    <input
      required
      type="password"
      class="form-control <%= message.password ? 'is-invalid' : '' %>"
      id="password"
      name="password"
      placeholder="Password" />
    <label for="password">Password</label>
    <div class="invalid-feedback">*Incorrect password.</div>
  </div>

  <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
  <div class="d-flex justify-content-center align-items-center my-2"></div>
  <hr class="mb-2" />
  <div class="d-flex justify-content-center align-items center">
    <a href="/register" class="btn btn-lg btn-success mt-3"
      >Create new account</a
    >
  </div>
</form>
