<form
  class="p-4 p-md-5 border rounded-3 bg-white shadow"
  autocomplete="off"
  action="/register"
  method="post">
  <div class="row text-start">
    <div class="col-sm">
      <h2 class="card-title mb-1">Sign Up</h2>
      <h6 class="card-subtitle text-body-secondary">
        Connect with fellow <span class="text-primary">Goons</span> today!
      </h6>
    </div>
  </div>
  <hr />
  <div class="row mt-3">
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="text"
          class="form-control shadow-sm"
          name="firstName"
          id="firstName"
          placeholder="First Name" />
        <label for="firstName" class="text-muted">First Name</label>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="text"
          class="form-control shadow-sm"
          name="lastName"
          id="lastName"
          placeholder="Last Name" />
        <label for="lastName" class="text-muted">Last Name</label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="email"
          class="form-control shadow-sm <%= message.emailExists ? 'is-invalid' : '' %>"
          name="email"
          id="email"
          placeholder="Email Address" />
        <label for="email" class="text-muted">Email Address</label>
        <div class="invalid-feedback">*Email already in use.</div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="password"
          class="form-control shadow-sm <%= message.error ? 'is-invalid' : '' %>"
          name="password"
          id="password"
          placeholder="Password" />
        <label for="password" class="text-muted">Password</label>
        <div class="invalid-feedback">*Passwords must match.</div>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="password"
          class="form-control shadow-sm <%= message.error ? 'is-invalid' : '' %>"
          name="passwordConfirm"
          id="passwordConfirm"
          placeholder="Confirm Password" />
        <label for="passwordConfirm" class="text-muted">Confirm Password</label>
        <div class="invalid-feedback">*Passwords must match.</div>
      </div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-sm">
      <button class="btn btn-primary w-100">Sign-up</button>
    </div>
  </div>
</form>
